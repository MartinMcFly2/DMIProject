<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Cursos.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Label Text="Autentificar para Continuar" FontSize="Title" />
            <Label Text="Email" />
            <Entry Placeholder="example@gmail.com" x:Name="txtEmailLog" Keyboard="Email" />
            <Label Text="Contraseña" />
            <Entry Placeholder="*******" x:Name="txtContraLog" IsPassword="True" />
            <Button Text="Login" Clicked="Button_Login" />
            <Button Text="Registrarse" Clicked="Button_Registrarse" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>